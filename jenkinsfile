pipeline {
	    agent any
	    
	      environment { 
        registry = "rahmachaabane/devopss-backend" 
        registryCredential = 'dockerHub' 
        dockerImage = '' 
    }
	    stages{
	        stage('Clone'){
	             steps{  
	                 git branch: 'rahma', url: 'https://github.com/chouichi-houda/devopsback.git'
	             }
	        }  
	       stage('MVN CLEAN') {
	            steps {
	                sh 'mvn clean'
	                 
	            }
	        }
	        stage('MVN COMPILE') {
	            steps {
	                   sh 'mvn compile -e'
	                 
	            }
	        }
		stage('Unit tests') {
                    steps {
                           sh 'mvn test'
                    }
		}
		stage('MVN SONARQUBE') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
                 
            }
        }
		
	       stage('Nexus'){
            steps{
                sh 'mvn deploy'
            }
        }
        
          stage('Build image') {
           	steps {
       		 sh "docker build -t rahmachaabane/devopss-backend ."
       		}
       		}   
       		
       		
       		
       		
       
		 stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        } 
     
	    }
	}

