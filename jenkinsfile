pipeline {
    agent any
    stages{
        stage('Clone'){
             steps{  
                 git branch: 'chaima', url: 'https://github.com/chouichi-houda/devopsback.git'
             }
        }  
       stage('MVN CLEAN') {
            steps {
                sh 'mvn clean'
                 
            }
        }
        stage('MVN COMPILE') {
            steps {
                   sh 'mvn compile'
                 
            }
        }
       stage("Unit tests") {
steps {
sh "mvn test"
}}

stage('MVN SONARQUBE') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
                 
            }
        }
       	
	       stage('clean and package') {
            
            steps {
                sh 'mvn clean package'  
            }
     
            } 
     stage('Nexus'){
            steps{
                sh 'mvn deploy -DskipStaging=true'
            }
        }
	stage('Build image') {
           	steps {
       		 sh "docker build -t chaimakaddour/devopsProjectAchat ."
       		}
       		}   
   stage("login DockerHub") {
                steps{
                    sh 'echo 203JFT1665 | docker login -u chaimakaddour -p 203JFT1665'
                }
        }
        stage("Push to DockerHub") {
                steps{
                    sh 'docker push chaimakaddour/devopsProjectAchat'
                }
        }
	 stage("Docker-compose") {
                steps{
                    sh 'docker-compose up -d'
                }
        }
    }
}
